<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/openOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/open"
            android:drawablePadding="@dimen/_17sdp"
            android:padding="8dp"
            android:text="Open"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shareOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="@dimen/_17sdp"
            android:padding="8dp"
            android:text="Share"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/copyLinkOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_link_24"
            android:drawablePadding="@dimen/_17sdp"
            android:padding="8dp"
            android:text="Copy link"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/removeLinkOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/del2"
            android:drawablePadding="@dimen/_17sdp"
            android:padding="8dp"
            android:text="Remove link"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
